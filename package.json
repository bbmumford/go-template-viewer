{
  "name": "go-template-viewer",
  "displayName": "Go Template Viewer",
  "description": "Live preview and development tool for Go templates with multi-file support, variable tracking, and dependency management",
  "version": "0.0.5",
  "publisher": "bbmumford",
  "author": {
    "name": "Brandon Miller-Mumford"
  },
  "license": "MIT",
  "icon": "resources/icon.png",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters",
    "Other"
  ],
  "keywords": [
    "go",
    "golang",
    "template",
    "html",
    "preview",
    "live reload"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/bbmumford/go-template-viewer.git"
  },
  "bugs": {
    "url": "https://github.com/bbmumford/go-template-viewer/issues"
  },
  "homepage": "https://github.com/bbmumford/go-template-viewer#readme",
  "activationEvents": [
    "onLanguage:html"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "goTemplateViewer.openPreview",
        "title": "Open Go Template Preview",
        "icon": "$(preview)"
      },
      {
        "command": "goTemplateViewer.refreshPreview",
        "title": "Refresh Preview",
        "icon": "$(refresh)"
      },
      {
        "command": "goTemplateViewer.linkDataFile",
        "title": "Link Data File to Template"
      },
      {
        "command": "goTemplateViewer.removeDataFile",
        "title": "Remove Data File",
        "icon": "$(close)"
      },
      {
        "command": "goTemplateViewer.openDataFile",
        "title": "Edit JSON Data File",
        "icon": "$(edit)"
      },
      {
        "command": "goTemplateViewer.editDataValue",
        "title": "Edit Value"
      },
      {
        "command": "goTemplateViewer.duplicateArrayItem",
        "title": "Duplicate Item",
        "icon": "$(copy)"
      },
      {
        "command": "goTemplateViewer.addArrayItem",
        "title": "Add Item",
        "icon": "$(add)"
      },
      {
        "command": "goTemplateViewer.deleteDataItem",
        "title": "Delete",
        "icon": "$(trash)"
      },
      {
        "command": "goTemplateViewer.addTemplateFile",
        "title": "Add Template File",
        "icon": "$(add)"
      },
      {
        "command": "goTemplateViewer.setBaseTemplate",
        "title": "Go Template: Set As Base Template",
        "icon": "$(file-symlink-file)"
      },
      {
        "command": "goTemplateViewer.addToContext",
        "title": "Go Template: Add To Template Context",
        "icon": "$(add)"
      },
      {
        "command": "goTemplateViewer.exportHtml",
        "title": "Go Template: Export to HTML",
        "icon": "$(export)"
      },
      {
        "command": "goTemplateViewer.changeEntryFile",
        "title": "Change Entry File"
      },
      {
        "command": "goTemplateViewer.manageDataFile",
        "title": "Manage Data File"
      },
      {
        "command": "goTemplateViewer.removeTemplateFile",
        "title": "Remove Template File",
        "icon": "$(close)"
      },
      {
        "command": "goTemplateViewer.editVariable",
        "title": "Edit Variable"
      },
      {
        "command": "goTemplateViewer.toggleServer",
        "title": "Go Template: Toggle Dev Server",
        "icon": "$(play)"
      },
      {
        "command": "goTemplateViewer.startServer",
        "title": "Go Template: Start Dev Server",
        "icon": "$(play)"
      },
      {
        "command": "goTemplateViewer.stopServer",
        "title": "Go Template: Stop Dev Server",
        "icon": "$(debug-stop)"
      },
      {
        "command": "goTemplateViewer.openInBrowser",
        "title": "Go Template: Open in Browser",
        "icon": "$(globe)"
      },
      {
        "command": "goTemplateViewer.showServerOutput",
        "title": "Go Template: Show Server Output"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "goTemplateViewer.openDataFile",
          "when": "view == goTemplateVariables",
          "group": "navigation",
          "icon": "$(json)"
        },
        {
          "command": "goTemplateViewer.startServer",
          "when": "view == goTemplateRenderContext && !goTemplateServerRunning",
          "group": "navigation@10",
          "icon": "$(play)"
        },
        {
          "command": "goTemplateViewer.stopServer",
          "when": "view == goTemplateRenderContext && goTemplateServerRunning",
          "group": "navigation@10",
          "icon": "$(debug-stop)"
        },
        {
          "command": "goTemplateViewer.openInBrowser",
          "when": "view == goTemplateRenderContext && goTemplateServerRunning",
          "group": "navigation@11",
          "icon": "$(globe)"
        }
      ],
      "view/item/context": [
        {
          "command": "goTemplateViewer.duplicateArrayItem",
          "when": "view == goTemplateVariables && viewItem == arrayItem",
          "group": "inline",
          "icon": "$(copy)"
        },
        {
          "command": "goTemplateViewer.addArrayItem",
          "when": "view == goTemplateVariables && viewItem == array",
          "group": "inline",
          "icon": "$(add)"
        },
        {
          "command": "goTemplateViewer.deleteDataItem",
          "when": "view == goTemplateVariables && viewItem =~ /arrayItem|value|array|object/",
          "group": "inline",
          "icon": "$(trash)"
        },
        {
          "command": "goTemplateViewer.addTemplateFile",
          "when": "view == goTemplateDependencies && viewItem =~ /htmxRequest|htmxHtmlRequest/",
          "group": "inline",
          "icon": "$(add)"
        },
        {
          "command": "goTemplateViewer.addTemplateFile",
          "when": "view == goTemplateDependencies && viewItem =~ /htmxRequest|htmxHtmlRequest/",
          "group": "htmx@1"
        },
        {
          "command": "goTemplateViewer.removeDataFile",
          "when": "view == goTemplateRenderContext && viewItem == dataFileContext",
          "group": "inline",
          "icon": "$(close)"
        }
      ],
      "explorer/context": [
        {
          "command": "goTemplateViewer.openPreview",
          "when": "resourceExtname =~ /\\.(html|tmpl|tpl|gohtml)$/",
          "group": "navigation",
          "icon": "$(open-preview)"
        },
        {
          "command": "goTemplateViewer.setBaseTemplate",
          "when": "resourceExtname =~ /\\.(html|tmpl|tpl|gohtml)$/",
          "group": "goTemplate@1"
        },
        {
          "command": "goTemplateViewer.addToContext",
          "when": "resourceExtname =~ /\\.(html|tmpl|tpl|gohtml)$/ && goTemplatePreviewActive",
          "group": "goTemplate@2"
        }
      ],
      "editor/title": [
        {
          "command": "goTemplateViewer.openPreview",
          "when": "resourceExtname =~ /\\.(html|tmpl|tpl|gohtml)$/",
          "group": "navigation",
          "icon": "$(open-preview)"
        }
      ],
      "editor/context": [
        {
          "command": "goTemplateViewer.linkDataFile",
          "when": "resourceExtname =~ /\\.(html|tmpl|tpl|gohtml)$/",
          "group": "goTemplate@3"
        },
        {
          "command": "goTemplateViewer.setBaseTemplate",
          "when": "resourceExtname =~ /\\.(html|tmpl|tpl|gohtml)$/",
          "group": "goTemplate@1"
        },
        {
          "command": "goTemplateViewer.addToContext",
          "when": "resourceExtname =~ /\\.(html|tmpl|tpl|gohtml)$/ && goTemplatePreviewActive",
          "group": "goTemplate@2"
        }
      ]
    },
    "views": {
      "goTemplateViewer": [
        {
          "id": "goTemplateRenderContext",
          "name": "Render Context"
        },
        {
          "id": "goTemplateVariables",
          "name": "Template Variables"
        },
        {
          "id": "goTemplateDependencies",
          "name": "Template Dependencies"
        },
        {
          "id": "goTemplateServerInfo",
          "name": "Template Server",
          "when": "goTemplateServerRunning"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "goTemplateViewer",
          "title": "Go Template Viewer",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "configuration": {
      "title": "Go Template Viewer",
      "properties": {
        "goTemplateViewer.contentRoot": {
          "type": "string",
          "default": "",
          "description": "Root directory for serving static assets (CSS, JS, images) relative to workspace. Leave empty to use template file directory."
        },
        "goTemplateViewer.serverPagesDir": {
          "type": "string",
          "default": "pages",
          "description": "Pages directory for the dev server. URLs map directly to files in this directory."
        },
        "goTemplateViewer.serverLayoutsDir": {
          "type": "string",
          "default": "layouts",
          "description": "Layouts directory containing base templates (e.g., base.html) that wrap page content."
        },
        "goTemplateViewer.serverPartialsDir": {
          "type": "string",
          "default": "partials",
          "description": "Partials directory containing reusable template fragments (e.g., header.html, footer.html)."
        },
        "goTemplateViewer.serverStaticDir": {
          "type": "string",
          "default": "static",
          "description": "Static assets directory served at /static/ (CSS, JavaScript, images)."
        },
        "goTemplateViewer.serverLayoutFile": {
          "type": "string",
          "default": "base.html",
          "description": "Layout filename to use for wrapping page content (e.g., base.html, main.html)."
        },
        "goTemplateViewer.serverIndexFile": {
          "type": "string",
          "default": "",
          "description": "Entry page filename for the / route (e.g., index.html). Auto-detected if empty."
        },
        "goTemplateViewer.serverPort": {
          "type": "number",
          "default": 3000,
          "description": "Port for the development server."
        },
        "goTemplateViewer.disablePreviewCSP": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "Disable the Content Security Policy in the preview panel. When enabled, inline scripts and external resources run without restrictions — useful for testing HTMX, Alpine.js, etc. **⚠️ Less secure.**"
        }
      }
    },
    "languages": [
      {
        "id": "go-template",
        "aliases": ["Go Template", "go-template"],
        "extensions": [".tmpl", ".tpl", ".gohtml"],
        "configuration": "./language-configuration.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.105.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "esbuild": "^0.25.10",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
